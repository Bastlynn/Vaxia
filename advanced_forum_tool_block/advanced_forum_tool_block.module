<?php
/**
 * @file
 * Code for the Ban User Block.
 */

/**
 * Implements hook_block_info().
 */
function advanced_forum_tool_block_block_info() {
  $blocks = array();
  $blocks['advanced_forum_tool_block'] = array(
    'info' => t('Adv Forum Tool Block'),
  );
  return $blocks;
}

/**
 * Implements hook_block_view().
 */
function advanced_forum_tool_block_block_view($delta = '') {
  $block = array();
  // Per delta, select an output.
  switch ($delta) {
    case 'advanced_forum_tool_block':
      $block['subject'] = t('Adv Forum Tool Block');
      $block['content'] = advanced_forum_forum_tools();
    break;
    default:
      // Do nothing.
    break;
  }
  return $block;
}
