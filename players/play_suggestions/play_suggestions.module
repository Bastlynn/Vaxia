    array(':nid' => $nid))->fetchField();
  $results = db_query('SELECT c.form_key, d.data FROM webform_submitted_data d ' .
    'LEFT JOIN webform_component c ON c.cid = d.cid ' .
    'WHERE d.sid = :sid',
    array(':sid' => $sid));
  $submission = array();
