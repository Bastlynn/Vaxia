          if ($form_state['values']['combat_might_b_dex_' . $i] < 0) {
            $form_state['values']['combat_might_b_dex_' . $i] = 0;
          }
          $form_state['values']['combat_might_b_str_' . $i] -= $form_state['values']['combat_action_count_b']; 
          if ($form_state['values']['combat_might_b_str_' . $i] < 0) {
            $form_state['values']['combat_might_b_str_' . $i] = 0;
          }
          $form_state['values']['combat_might_b_end_' . $i] -= $form_state['values']['combat_action_count_b']; 
          if ($form_state['values']['combat_might_b_end_' . $i] < 0) {
            $form_state['values']['combat_might_b_end_' . $i] = 0;
          }
          // Get results.
          $results .= _dice_ruler_combat(
            $form_state['values']['combat_might_a_dex_' . $i],
            $form_state['values']['combat_add_diff_a_dex_' . $i],
            $form_state['values']['combat_rolled_a_dex_' . $i],
            $form_state['values']['combat_might_a_str_' . $i],
            $form_state['values']['combat_add_diff_a_str_' . $i],
            $form_state['values']['combat_rolled_a_str_' . $i],
            $form_state['values']['combat_might_a_end_' . $i],
            $form_state['values']['combat_add_diff_a_end_' . $i],
            $form_state['values']['combat_rolled_a_end_' . $i],
            $form_state['values']['combat_weapon_a'],
  
            $form_state['values']['combat_might_b_dex_' . $i],
            $form_state['values']['combat_add_diff_b_dex_' . $i],
            $form_state['values']['combat_rolled_b_dex_' . $i],
            $form_state['values']['combat_might_b_str_' . $i],
            $form_state['values']['combat_add_diff_b_str_' . $i],
            $form_state['values']['combat_rolled_b_str_' . $i],
            $form_state['values']['combat_might_b_end_' . $i],
            $form_state['values']['combat_add_diff_b_end_' . $i],
            $form_state['values']['combat_rolled_b_end_' . $i],
            $form_state['values']['combat_weapon_b']
          ) . '</br>';
        }
      break;
      case 'magic':
        $results = _dice_ruler_magic(
          $form_state['values']['magic_might_a'],
          $form_state['values']['magic_diff_a'],
          $form_state['values']['magic_add_diff_a'],
          $form_state['values']['magic_rolled_a'],
          $form_state['values']['magic_might_b'],
          $form_state['values']['magic_diff_b'],
          $form_state['values']['magic_add_diff_b'],
          $form_state['values']['magic_rolled_b'],
          $form_state['values']['magic_target_stat_int'],
          $form_state['values']['magic_target_stat_spi'],
          $form_state['values']['magic_target_skill']
        );
      break;
    }
  }
  $form['dice_ruler_dice_results'] = array(
    '#title' => t('Roll results'),
    '#type' => 'item',
    '#markup' => $results,
    '#prefix' => '<div id="dice_ruler_dice_results">',
    '#suffix' => '</div>',
    '#states' => array(
      'invisible' => array(
        ':input[name="roll_type"]' => array('value' => 'hidden'),
      ),
    ),
  );
  // Provide button.
  $form['rule_dice'] = array(
    '#type' => 'button',
    '#value' => t('Rule roll'),
    '#ajax' => array(
      'callback' => 'dice_ruler_form_ajax',
      'wrapper' => 'dice_ruler_dice_results',
      'method' => 'replace',
      'effect' => 'fade',
    ),
    '#states' => array(
      'invisible' => array(
        ':input[name="roll_type"]' => array('value' => 'hidden'),
      ),
    ),
  );
  // Attach the JS for this ruler to pick up results from the chatroom.
  drupal_add_js(drupal_get_path('module', 'dice_ruler') . '/js/dice_ruler.js');
  return $form;
}

